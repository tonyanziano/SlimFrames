<Ui xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
  <Script file="UnitFrameTemplate.lua" />

  <Button virtual="true" name="FUnitFrameTemplate" mixin="FUnitFrameMixin">
    <Size x="200" y="30"/>
    <KeyValues>
      <!-- Specifies the unit that the unit frame tracks -->
      <KeyValue key="unit" value="player" type="string" />
    </KeyValues>

    <!-- only for creating a background (border) -->
    <Layers>
      <Layer level="BACKGROUND" >
        <Texture parentKey="border">
          <Size x="154" y="34" />
          <Color r="0" g="0" b="0" a="1" />
          <Anchors>
            <Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER" />
          </Anchors>
        </Texture>
      </Layer>
    </Layers>

    <Frames>
      <!-- health -->
      <StatusBar parentKey="health" minValue="0" maxValue="100">
        <Size x="150" y="20"/>
        <Anchors>
          <Anchor point="TOP" relativeTo="$parent" relativePoint="TOP" />
        </Anchors>
				<BarTexture file="Interface\TargetingFrame\UI-TargetingFrame-BarFill"/>

        <Layers>
          <Layer level="BACKGROUND">
            <Texture file="Interface/Tooltips/UI-Tooltip-Background" setAllPoints="true">
              <Color r="0" g="0" b="0" a="0.5" />
            </Texture>
          </Layer>
          <Layer level="OVERLAY">
            <FontString parentKey="name" inherits="SystemFont_Shadow_Small" text="">
              <Anchors>
                <Anchor point="LEFT" relativePoint="LEFT" x="4" />
              </Anchors>
            </FontString>
            <FontString parentKey="text" inherits="SystemFont_Shadow_Small" text="">
              <Anchors>
                <Anchor point="RIGHT" relativePoint="RIGHT" x="-4" />
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
      </StatusBar>

      <!-- power -->
      <StatusBar parentKey="power" minValue="0" maxValue="100">
        <Size x="150" y="10"/>
        <Anchors>
          <Anchor point="BOTTOM" relativeTo="$parent" relativePoint="BOTTOM" />
        </Anchors>
				<BarTexture file="Interface\TargetingFrame\UI-TargetingFrame-BarFill"/>
        
        <Layers>
          <Layer level="BACKGROUND">
            <Texture file="Interface/Tooltips/UI-Tooltip-Background" setAllPoints="true">
              <Color r="0" g="0" b="0" a="0.5" />
            </Texture>
          </Layer>
          <Layer level="OVERLAY">
            <FontString parentKey="text" inherits="SystemFont_Shadow_Small" text="">
              <Anchors>
                <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-4" />
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
      </StatusBar>
    </Frames>

    <Scripts>
      <OnLoad>
        self:OnLoad()
      </OnLoad>
      <OnEnter>
        -- register tooltip
        GameTooltip_SetDefaultAnchor(GameTooltip, UIParent)
        GameTooltip:SetUnit(self.unit)
        GameTooltip:Show()
      </OnEnter>
      <OnLeave>
        GameTooltip:Hide()
      </OnLeave>
    </Scripts>
  </Button>
</Ui>